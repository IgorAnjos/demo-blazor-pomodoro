@page "/settings"
@inject Blazored.LocalStorage.ILocalStorageService localStorage
@inject NavigationManager Navigation

<div class="settings-container">
    <div class="settings-card">
        <h2 class="settings-title">‚öôÔ∏è Settings</h2>
        
        <EditForm Model="@_pomodoroSettings" OnValidSubmit="FormSubmit">
            <DataAnnotationsValidator />
            
            <div class="form-group">
                <label class="form-label">
                    üçÖ Pomodoro Duration (minutes)
                </label>
                <InputNumber class="form-control" @bind-Value="_pomodoroSettings.PomodoroDuration" />
                <ValidationMessage For="@(() => _pomodoroSettings.PomodoroDuration)" class="validation-message" />
            </div>
            
            <div class="form-group">
                <label class="form-label">
                    ‚òï Short Break (minutes)
                </label>
                <InputNumber class="form-control" @bind-Value="_pomodoroSettings.ShortBreak" />
                <ValidationMessage For="@(() => _pomodoroSettings.ShortBreak)" class="validation-message" />
            </div>
            
            <div class="form-group">
                <label class="form-label">
                    üå¥ Long Break (minutes)
                </label>
                <InputNumber class="form-control" @bind-Value="_pomodoroSettings.LongBreak" />
                <ValidationMessage For="@(() => _pomodoroSettings.LongBreak)" class="validation-message" />
            </div>

            <ValidationSummary class="validation-message" />

            <div class="timer-controls">
                <button type="submit" class="btn-control btn-start">üíæ Save Settings</button>
                <button type="button" class="btn-control btn-reset" @onclick="Cancel">‚ùå Cancel</button>
            </div>

            @if (_showSuccessMessage)
            {
                <div class="alert-success">
                    ‚úÖ Settings saved successfully! Redirecting...
                </div>
            }

        </EditForm>
    </div>
</div>

@code {
    private PomodoroSettings _pomodoroSettings = new();
    private bool _showSuccessMessage = false;

    protected override async Task OnInitializedAsync()
    {
        // Set defaults first
        _pomodoroSettings.PomodoroDuration = 25;
        _pomodoroSettings.ShortBreak = 5;
        _pomodoroSettings.LongBreak = 15;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadSettings();
            StateHasChanged();
        }
    }

    private async Task LoadSettings()
    {
        var json = await localStorage.GetItemAsync<string>("pomodoroSettings");
        
        if (!string.IsNullOrEmpty(json))
        {
            var settings = System.Text.Json.JsonSerializer.Deserialize<PomodoroSettings>(json);
            if (settings != null)
            {
                _pomodoroSettings = settings;
            }
        }
    }

    private async Task FormSubmit()
    {
        var json = System.Text.Json.JsonSerializer.Serialize(_pomodoroSettings);
        await localStorage.SetItemAsync("pomodoroSettings", json);
        
        _showSuccessMessage = true;
        StateHasChanged();
        
        await Task.Delay(2000);
        Navigation.NavigateTo("/");
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/");
    }
}
